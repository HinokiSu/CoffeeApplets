<view class="sendback">
  <image src="{{sendbackimage}}"></image><text>\t想对你说</text>
</view>
<text>\n</text>
<view class="topTabSwiper">
  <view class='tab  {{currentData == 0 ? "tabBorer" : ""}}'  data-current = "0" bindtap='checkCurrent'>当前订单</view>
  <view class='tab  {{currentData == 1 ? "tabBorer" : ""}}'  data-current = "1" bindtap='checkCurrent'>历史订单</view>
</view>
<swiper current="{{currentData}}" class='swiper' style="height:600px;" duration="300" bindchange="bindchange">
  <swiper-item>
    <view class="orderdetail">
      <view wx:for="{{order_Arr}}" wx:key="*this" id="user_use{{item.id}}" class="productimage_view">
         <text class="location">{{item.location}}</text>
         <view class="test">\n{{item.date}} {{item.datetime}}</view><text>\n</text>
            <view wx:for="{{item.productimage}}" wx:key="*this" id="{{item.id}}" class="productview" >
             <image src="{{item.productimage}}" mode="widthFix" class="productimage"></image>
            </view>
      </view>
    </view>
  </swiper-item>


  <swiper-item><view class='swiper_con'>历史订单</view></swiper-item>
</swiper>